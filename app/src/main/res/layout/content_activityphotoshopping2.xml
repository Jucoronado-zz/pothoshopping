
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activityphotoshopping" android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:tag="foto"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/foto"
            android:layout_weight="1" android:contentDescription="@string/todo"/>
    <Button
            android:text="TOMAR FOTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/TomarFoto" android:layout_weight="1"/>
</LinearLayout>