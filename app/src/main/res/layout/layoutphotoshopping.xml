<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activityphotoshopping">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Historial"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:text="Parametros"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/parbuscar" android:layout_weight="1"/>
        <Button
                android:text="BUSCAR"
                android:layout_width="25dp"
                android:layout_height="wrap_content" android:id="@+id/botbuscar" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>